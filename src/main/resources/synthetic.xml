<synthetic xsi:schemaLocation="http://www.xebialabs.com/deployit/synthetic synthetic.xsd" xmlns="http://www.xebialabs.com/deployit/synthetic" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <type type="xltest.ExecuteTestSpecification" extends="xlrelease.PythonScript" description="Supports 0.2.0 release">
        <property name="scriptLocation" default="xltest/ExecuteTestSpecification.py" hidden="true" />
        <property name="iconLocation" default="xltest/xltest.png" hidden="true" />

        <property name="xltestServer" category="input" label="Server" referenced-type="xltest.Server" kind="ci"/>
        <property name="username" category="input" label="username" required="true" />
        <property name="password" password="true" category="input" required="true" />

        <property name="testSpecificationName" category="input" label="Test Specification Name" required="true" />
        <property name="properties" category="input" default="" required="false" />
        <property name="command" category="input" default="" required="false" />

        <property name="uri" category="output"/> 
    </type>

	<type type="xltest.ExecuteLocalTestSet" extends="xlrelease.PythonScript" description="Supports 0.1 release">
        <property name="scriptLocation" default="xltest/ExecuteTestSet.py" hidden="true" />
        <property name="iconLocation" default="xltest/xltest.png" hidden="true" />

        <property name="xltestServer" category="input" label="Server" referenced-type="xltest.Server" kind="ci"/>
        <property name="username" category="input" label="username" required="true" />
        <property name="password" password="true" category="input" required="true" />

        <property name="testSetDefinition" category="input" label="Test Set Definition" required="true" />
        <property name="testSetType" category="input" default="xltest.LocalTestRun" required="true" />

        <property name="uri" category="output"/> 
    </type>

    <type type="xltest.ExecuteJenkinsTestSet" extends="xlrelease.PythonScript" description="Supports 0.1 release">
        <property name="scriptLocation" default="xltest/ExecuteTestSetJenkins.py" hidden="true" />
        <property name="iconLocation" default="xltest/xltest.png" hidden="true" />

        <property name="xltestServer" category="input" label="Server" referenced-type="xltest.Server" kind="ci"/>
        <property name="username" category="input" label="username" required="true" />
        <property name="password" password="true" category="input" required="true" />

        <property name="testSetDefinition" category="input" label="Test Set Definition" required="true" />
        <property name="jobName" category="input" label="Jenkins Job Name" default="" required="true" />

        <property name="testSetType" category="input" default="generic.JenkinsTestRun" required="true" />

        <property name="uri" category="output"/> 
    </type>

    <type type="xltest.CheckTestQualification" extends="xlrelease.PythonScript" description="Check the current qualification results for a test set">
        <property name="scriptLocation" default="xltest/CheckQualification.py" hidden="true" />
        <property name="iconLocation" default="xltest/xltest.png" hidden="true" />

        <property name="xltestServer" category="input" label="Server" referenced-type="xltest.Server" kind="ci"/>
        <property name="username" category="input" label="username" required="true" />
        <property name="password" password="true" category="input" required="true" />

        <property name="testSpecificationName" category="input" label="Test Specification Name" required="true" />

    </type>

	<type type="xltest.Server" extends="configuration.HttpConnection"/>
</synthetic>
